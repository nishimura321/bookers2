<div class="container">
  <div class="row">

<%= render 'users/leftlist', user: @user, book: @book_new %>

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table table-hover">
  <tbody>
      <tr>
        <td><%= image_tag @user.get_profile_image(100,100) %>
        <br><%= link_to @user.name, user_path(@user.id) %></td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if @user == current_user %>
        <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-success" %></td>
        <td><%= link_to 'Detroy', book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %></td>
        <% end %>
      </tr>
  </tbody>
</table>
</div>

  </div>
</div>