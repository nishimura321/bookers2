<h2>Book detail</h2>
<table>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(100,100) %>
            <br>
            <%= link_to "@books.user.name", edit_user_path %></td>
        <td><%= link_to "@books.book.title", book_path(book.id) %></td>
        <td><%= link_to 'Edit', edit_book_path %></td>
        <td><%= link_to 'Detroy', book_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>User info</h2>
<%= image_tag book.user.get_profile_image(100,100) %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.user.name %></th>
      <th>introduction</th>
      <th><%= @user.user.introduction %></th>
    </tr>
  </tbody>
</table>
  <%= link_to 'Edit', edit_book_path %>

<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Opinion</p>
  <%= f.text_area :body %>

  <%= f.submit ' Create Book ' %>
<% end %>

